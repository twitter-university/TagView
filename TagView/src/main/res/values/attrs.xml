<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="tag_view">

        <!-- Themes Names -->
        <attr name="HeaderStyle" format="reference" />
        <attr name="TagStyle" format="reference" />

        <attr name="notification_color" format="color" />

        <!-- Tag Attributes -->
        <attr name="tag_view_tag_drawable" format="reference" />
        <attr name="tag_view_tag_margin" format="dimension" />
        <attr name="tag_view_tag_padding_horizontal" format="dimension" />
        <attr name="tag_view_tag_padding_vertical" format="dimension" />
        <attr name="tag_view_text_size" format="dimension" />
        <attr name="tag_view_text_color" format="color" />
        <attr name="tag_view_text_face" format="enum">
            <enum name="normal" value="0" />
            <enum name="sans" value="1" />
            <enum name="serif" value="2" />
            <enum name="monospace" value="3" />
        </attr>
        <attr name="tag_view_text_style">
            <enum name="normal" value="0" />
            <enum name="bold" value="1" />
            <enum name="italic" value="2" />
            <enum name="bolditalic" value="3" />
        </attr>
    </declare-styleable>

</resources>